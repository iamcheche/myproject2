<!DOCTYPE>
<html>
<head>
 <script src="//code.jquery.com/jquery-1.9.1.js"></script>
  <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
  <script src="http://jquery.bassistance.de/validate/jquery.validate.js"></script>
<script src="http://jquery.bassistance.de/validate/additional-methods.js"></script>

<script type = "text/javascript">
  $(function() {

  alert ('Plugins are now loaded... ')
    $("#new_product").validate({
    
        rules: {
          "product[name]" : {required: true,
                    minlength:3
            },
         
            "product[price]": {
                required: true,
                number: true
            },
        },                                                                                messages: {
            "product[name]": {required: "<br>Please enter a product name.",
                         minlength: "<br>Please enter a product name<br> that has at least 3 characters."
        },
       
        "product[price]": {
                required: "<br>Please provide a price.",
                number: "<br>only number in declaring prices."
            },
        },
        
        submitHandler: function(form) {
            form.submit();
        }
    });

  });
  
  </script>
</head>
<body>

<h1><br><br><br><br></h1>
    <fieldset>
      <legend><h3>Add New Product</h3></legend>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "name", :id => "name" %> 
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :class => "price", :id => "price" %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, options_for_select([["Metal", "Metal"], ["Plastic", "Plastic"], ["Wood","Wood"]]), :class => "category", :id => "category" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</fieldset>
<br><br><br><br><br>  
  </body>
  </html>